<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chromerivals" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ani_light</item>
        <item name="colorSecondaryVariant">@color/ani_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="Theme.Chromerivals.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SwitchTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlNormal">@color/bcu</item>
        <item name="colorSwitchThumbNormal">@color/bcu_light</item>
        <item name="android:colorForeground">@color/bcu_light</item>
    </style>

    <style name="SwitchBCU">
        <item name="colorControlActivated">@color/bcu_light</item>
        <item name="colorSwitchThumbNormal">#1DE9B6</item>
        <item name="android:colorForeground">#B2DFDB</item>
    </style>

</resources>